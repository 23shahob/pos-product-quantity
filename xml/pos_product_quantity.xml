<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_custom.ProductCard" t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('product-content')]" position="after">
            <div class="product-quantity px-2 justify-content-between rounded-bottom rounded-3 flex-shrink-1">
                <i class="o_button_icon fa fa-fw fa-cubes"></i>
                <span t-esc="this.quantity.value" style="padding-left:6px"/>
            </div>
        </xpath>
    </t>
</templates>
